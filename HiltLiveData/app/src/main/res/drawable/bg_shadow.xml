<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- "background shadow" -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#17000000" />
            <corners
                android:radius="25dp"/>
        </shape>
    </item>
    <item
        android:bottom="10px"
        android:left="0px"
        android:right="0px"
        android:top="0px">
        <shape android:shape="rectangle">
            <solid android:color="#9FF3F1F1"/>
            <corners
                android:radius="25dp"/>
        </shape>
    </item>
</layer-list>